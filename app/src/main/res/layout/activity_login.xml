<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.licencias.munlima.appmunlima.login"
    android:background="#ffe100">

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Usuario"
        app:met_iconLeft="@drawable/ic_person_black_36dp"
        android:textSize="28sp"
        app:met_baseColor="#18256f"
        app:met_underlineColor="#18256f"
        app:met_floatingLabel="highlight"
        android:singleLine="true"
        app:met_singleLineEllipsis="true"
        android:layout_marginTop="39dp"
        android:id="@+id/txtUsuarioLogin"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:imeOptions="actionNext"/>


    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"
        app:met_iconLeft="@drawable/ic_vpn_key_black_36dp"
        app:met_iconPadding="0dp"
        android:textSize="28sp"
        app:met_baseColor="#18256f"
        app:met_underlineColor="#18256f"
        app:met_floatingLabel="highlight"
        app:met_singleLineEllipsis="true"
        android:singleLine="true"
        android:id="@+id/txtPassLogin"
        android:layout_below="@+id/txtUsuarioLogin"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Iniciar SesiÃ³n"
        android:id="@+id/btnIniciarLogin"
        android:background="#18256f"
        android:textColor="#ffffff"
        android:layout_below="@+id/txtUsuarioLogin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="120dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView2"
        android:src="@drawable/limaescudo2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/txtErrorLogin"
        android:layout_marginTop="45dp"
        android:textColor="#18256f"
        android:layout_below="@+id/btnIniciarLogin"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center_horizontal" />


</RelativeLayout>
